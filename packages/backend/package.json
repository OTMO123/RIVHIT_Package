{
  "name": "@packing/backend",
  "version": "1.0.0",
  "description": "Backend API server for packing system",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/src/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "NODE_ENV=test-integration jest --testMatch='**/tests/integration/**/*.test.ts'",
    "test:unit": "jest --testMatch='**/__tests__/**/*.test.ts'",
    "test:tdd": "jest --watch --testMatch='**/__tests__/**/*.test.ts'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "node -e \"const fs=require('fs');const path=require('path');try{if(!fs.existsSync('dist/src'))fs.mkdirSync('dist/src',{recursive:true});if(fs.existsSync('src/templates')&&!fs.existsSync('dist/src/templates')){fs.cpSync('src/templates','dist/src/templates',{recursive:true})}}catch(e){}\""
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.3.4",
    "bcrypt": "^6.0.0",
    "canvas": "^3.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^6.2.0",
    "ioredis": "^5.3.1",
    "jsbarcode": "^3.12.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "typeorm": "^0.3.12",
    "winston": "^3.8.2",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.14.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.4.3",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  }
}
