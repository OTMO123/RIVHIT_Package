{
  "name": "@packing/frontend",
  "version": "1.0.0",
  "description": "Electron frontend for packing system",
  "main": "dist/main.js",
  "scripts": {
    "copy-assets": "node -e \"const fs=require('fs');const path=require('path');if(!fs.existsSync('dist/assets'))fs.mkdirSync('dist/assets',{recursive:true});fs.copyFileSync('src/assets/icon.jpg','dist/assets/icon.jpg')\"",
    "build": "npm run copy-assets && webpack --mode production",
    "build:dev": "npm run copy-assets && webpack --mode development",
    "dev": "concurrently \"webpack --mode development --watch\" \"wait-on dist/main.js && electron dist/main.js\"",
    "electron": "electron .",
    "package": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ant-design/icons": "^5.0.1",
    "@types/node-fetch": "^2.6.12",
    "antd": "^5.2.0",
    "axios": "^1.3.4",
    "dayjs": "^1.11.13",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.31.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.4.3",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/renderer/$1",
      "^@shared/(.*)$": "<rootDir>/../shared/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/main/**/*"
    ]
  },
  "build": {
    "appId": "com.company.packing-system",
    "productName": "Packing System",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.jpg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
