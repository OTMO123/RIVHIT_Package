{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@packing/shared/*": ["packages/shared/src/*"],
      "@packing/backend/*": ["packages/backend/src/*"],
      "@packing/frontend/*": ["packages/frontend/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "coverage"]
}